<% @count = 0 %>
<h1>Number of <span class="teal">Users</span></h1>
<%= @size %>
	<%= render :partial => "partials/aggregate.html.erb" %>
<h1>User <span class="teal">Profiles</span></h1>
<div class="blueback">
<div class="box"<%= link_to "Sleep", :action => "sleep" %></div>
	
<table>
  <tr>
    <th>Username</th>
    <th>Twitter</th>
    <th>Realname</th>
    <th>Location</th>
    <th></th>
    <th># of sleeps</th>
  </tr>

<% for user in @users %>
<% @count+=1 %>
<% if @count%2 == 0 %>
  <tr>
<% else %>
  <tr class="zebra">
<% end %>
    <td><%=h user.username %></td>
    <td>
	<% if user.twitter.length > 0 %>
		<%=link_to "@" + user.twitter.to_s, "http://www.twitter.com/" + user.twitter.to_s %>
	<% end %>
	</td>
    <td><%=h user.realname %></td>
    <td><%=h user.zip %></td>
    <td><%=link_to "See user's profile", :action => "edit", :params => { :id => user.id }  %></td>    
	<td><% if user.sleeps.length < 1 
		  color="red"
		else
		  color=""
		end %>
		<span class="<%=color%>"> 
		<%= user.sleeps.length %>
		</span>		
	</td>
  </tr>
<% end %>
</table>
</div>